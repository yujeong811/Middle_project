<script type="text/javascript">

$(function(){
	
	var pidList = [];
	
	
	$('#findIdBtn').on('click', function(){		
		$.ajax({
			url: '/dditBnb/findID.do',
			type:'post',
			data : {
				"name" : $('#findIdname').val(),
				"tel" : $('#findIdtel').val()	
			},
			success: function(res){			
				code = "";		
				
				if(res == null) {
					code += "<p>아이디가 존재하지 않습니다.</p>";
				} else {
					code += "<p>찾으시는 아이디는 " + res + " 입니다.</p>";
				}			
			
				$('#findIdResult').html(code);			
			},
			error : function(xhr){
				alert("상태 : " + xhr.status);
			},
			dataType:'json'
		})	
		
	})
	
	$('#findId').click(function(){
		$('#findIdname').val("");
		$('#findIdtel').val("");
		$('#findIdResult').html("");
	})
	
	$('#findPwdBtn').on('click', function(){		
		$.ajax({
			url: '/dditBnb/findPass.do',
			type:'post',
			data : {
				"id" : $('#findPassid').val(),
				"name" : $('#findPassname').val(),	
				"hint" : $('#findPasshint').val(),
				"ans" : $('#findPassans').val()
			},
			success: function(res){					
					alert(res);	
					if(res == "회원정보가 확인됐습니다."){						
						$('#newPassForm').modal('show');
						$('#findPwdForm').modal('hide');
					}				
			},
			error : function(xhr){
				alert("상태 : " + xhr.status);
			}
		})	
		
	})
	
	$('#findPass').click(function(){
		$('#findPassid').val("");
		$('#findPassname').val("");
		$('#findPassans').val("");
	})
	
	$('#getnewpass').on('click', function(){		
		$.ajax({
			url: '/dditBnb/updatePass.do',
			type:'post',
			data : {
				"id" : $('#findPassid').val(),
				"pass" : $('#newpass').val()
			},
			success: function(res){	
				alert('비밀번호가 수정되었습니다.');	
				$('#newPassForm').modal('hide');		
			},
			error : function(xhr){
				alert("상태 : " + xhr.status);
			},
			dataType:'json'
		})	
		
	})
	
	//숙소 등록 목록
	

	$.ajax({
		url:'/dditBnb/HostProdList.do',
		type:'post',
		data:{
			"memId":"<%=user%>"
		},
		success:function(res){
			str="<table  class='table table-striped'border='1'>";
			
			str+="<tr><td>상품ID</td>";
			str+="<td>상품주소</td>";
			str+="<td>상품이름</td>";
			str+="<td>상품등록일</td>";
			str+="<td>상품가격</td>";
			str+="<td>등록취소</td></tr>";
			$.each(res, function(i,v){				
				
				
				str+="<tr class='prodid'><td class='pid'>"+v.prod_id+"</td>";
				str+="<td>"+v.prod_add1+" "+v.prod_add2+"</td>";
				str+="<td>"+v.prod_name+"</td>";
				str+="<td>"+v.prod_date+"</td>";
				str+="<td>"+v.prod_price+"</td>";
				str+="<td><input type='button' id='cancelprod' value='등록취소'/></td></tr>";
			
				pidList.push(v.prod_id);
			})
			
			console.log(pidList)
			
			
			
			str+="</table>";
			$('.sese').html(str);
		},
		error:function(xhr){
			alert("상태:"+xhr.status); 
		},
		 dataType:'json'
		
		
	})
	
	$(document).on('click','#cancelprod',function(){
		p = $(this).parents('.prodid').find('#pid').text();
		
		
		$.ajax({
			url:'/dditBnb/UpdateProd.do',
			type:'post',
			data:{
				"id":p
			},
			
			success:function(res){
				
		  
		    	alert("등록취소 되었습니다.")
		    
				
				
			},
			error:function(xhr){
				  alert("상태:"+xhr.status);
			},
			 dataType:'json'
			
		})
		
		
		
	})
	
	
	
		$('#alreadyUse').click(function(){
			
			$.ajax({
				url:'/dditBnb/AlreadyUseProd.do',
				type:'post',
				data:{
					"prodId" : pidList
				},
				
				
				success:function(res){
	      str="<table  class='table table-striped'border='1'>";
				
				str+="<tr><td>상품ID</td>";
				str+="<td>고객ID</td>";
				str+="<td>체크인날짜</td>";
				str+="<td>체크아웃날짜</td></tr>";
				
				$.each(res, function(i,v){				
					
					
					str+="<tr class='prodid'><td id='pid'>"+v.prod_id+"</td>";
					str+="<td>"+v.mem_id+"</td>";
					str+="<td>"+v.check_in+"</td>";
					str+="<td>"+v.check_out+"</td></tr>";
				
					
				})
				
				
				
				
				
				str+="</table>";
				$('#reseraccept').html(str);
		      	},
				error:function(xhr){
					  alert("상태:"+xhr.status);
				},
				 dataType:'json'
				
			})
		})
		
		
	$('#checkReserList').click(function(){
			
			$.ajax({
				url:'/dditBnb/CheckReserList.do',
				type:'post',
				data:{
					"prodId" : pidList
				},
				
				
				success:function(res){
	      str="<table  class='table table-striped'border='1'>";
				
				str+="<tr><td>상품ID</td>";
				str+="<td>고객ID</td>";
				str+="<td>체크인날짜</td>";
				str+="<td>체크아웃날짜</td></tr>";
				
				$.each(res, function(i,v){				
					
					
					str+="<tr class='prodid'><td id='pid'>"+v.prod_id+"</td>";
					str+="<td>"+v.mem_id+"</td>";
					str+="<td>"+v.check_in+"</td>";
					str+="<td>"+v.check_out+"</td></tr>";
				
					
				})
				
				
				
				
				
				str+="</table>";
				$('#checkreser').html(str);
		      	},
				error:function(xhr){
					  alert("상태:"+xhr.status);
				},
				 dataType:'json'
				
			})
		})
		
		
		
		
	
	
	
	
	
})
</script>

