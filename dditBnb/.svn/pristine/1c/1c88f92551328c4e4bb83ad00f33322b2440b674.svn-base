@charset "UTF-8";

a:hover{
	text-decoration: none;
}

/* header */
#headerTop{
	display: flex;
	justify-content: space-between;
	align-items: center;
	margin: 30px 150px;
}

#logoContainer a{
	display: flex;
	align-items: center;
	color: hotpink
}

#logoTitle{
	font-family: 'Fira Sans', sans-serif;
	font-size: 20px;
}

header button{
	border: none;
	border-radius: 50px;
	height: 50px;
	background: transparent;
	font-size: 13px;
	font-weight: bold;
}

.userContent{
	display: flex;
	align-items: center;
}
.hostingBtn{
	background: transparent;
	color: white;
	font-weight: bold;
	width: 100px;
}
.hostingBtn a{
	color: black;
	
}

.hostingBtn:hover{
	background: #f0f1f2;
	cursor: pointer;
}

.userMenu{
	display : flex;
	align-items : center;
	justify-content:center;
	cursor: pointer;
	width:80px;
	margin-left: 20px;
	border: 1px solid black;
}

#userMenu_list{
	display : none;
	background:white;
	position: absolute;
	right: 20px;
	top:100px;
	z-index:100;
	border-radius: 10px;
	width: 200px;
	border:5px solid transparent;
	background-image: linear-gradient(#ffffff, #ffffff), linear-gradient(to right, #fbfcb9be, #ffcdf3aa, #65d3ffaa);
    background-origin: border-box;
    background-clip: content-box, border-box;
}

.userMenu_item{
	margin: 10px 0;
	padding: 10px 0;
	font-size : 15px;
	cursor: pointer;
	text-align:center;
}

.userMenu_item:hover{
	background:#f0f1f2;
}

.userMenu_item a{
	color: black;
	text-decoration: none;
	outline: none
}