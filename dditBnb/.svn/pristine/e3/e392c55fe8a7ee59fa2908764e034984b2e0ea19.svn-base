	    int cnt=0;
	       
	       
			Object obj= smc.insert("prod.insertProdImg",prodimgVo);
	       if(obj==null) cnt=1;
	       
	       return cnt;
	}
	@Override
	public int insertProdConven(SqlMapClient smc, ProdConvenVO prodconvenVo) throws SQLException {
		
		
		int cnt=0;
	       
	       
		Object obj=smc.insert("prod.insertProdConven",prodconvenVo);
       if(obj==null) cnt=1;
       
       return cnt;
	}
	
	

}
