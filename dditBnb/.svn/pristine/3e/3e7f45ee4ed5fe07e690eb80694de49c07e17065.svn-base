@charset "UTF-8";
a{
	color: black;
}

a:hover{
	text-decoration: none;
	color: black;
	background:#e8e7e3;
}

/* header */
#headerTop{
	display: flex;
	justify-content: space-between;
	align-items: center;
	margin: 30px 150px;
}

#logoContainer a{
	display: flex;
	align-items: center;
	color: hotpink
}

#logoTitle{
	font-family: 'Fira Sans', sans-serif;
	font-size: 20px;
}

header button{
	border: none;
	border-radius: 50px;
	height: 50px;
	background: transparent;
	font-size: 13px;
	font-weight: bold;
}

.userContent{
	display: flex;
	align-items: center;
}
.hostingBtn{
	background: transparent;
	color: white;
	font-weight: bold;
	width: 100px;
}
.hostingBtn a{
	color: black;
	
}

.hostingBtn:hover{
	background: #f0f1f2;
	cursor: pointer;
}

.userMenu{
	display : flex;
	align-items : center;
	justify-content:center;
	cursor: pointer;
	width:80px;
	margin-left: 20px;
	border: 1px solid black;
}

#userMenu_list{
	display : none;
	background:white;
	position: absolute;
	right: 20px;
	top:100px;
	z-index:100;
	border-radius: 10px;
	width: 200px;
	border:5px solid transparent;
	background-image: linear-gradient(#ffffff, #ffffff), linear-gradient(to right, #fbfcb9be, #ffcdf3aa, #65d3ffaa);
    background-origin: border-box;
    background-clip: content-box, border-box;
}

.userMenu_item{
	margin: 10px 0;
	padding: 10px 0;
	font-size : 15px;
	cursor: pointer;
	text-align:center;
}

.userMenu_item:hover{
	background:#f0f1f2;
}

.userMenu_item a{
	color: black;
	text-decoration: none;
	outline: none
}

.sese{
	width: 100%;
}
/* footer */
#footer{
	background: #e3e2de;
}

#footer_list{
	display: flex;
	justify-content: center;
	padding: 30px;
}

#footer_list li{
	padding: 10px 0;
	cursor: pointer;
}

#footer_list ul{
	margin: 10px 20px;
}

#footer_list h3{
	font-weight: bold;
	margin: 0 20px;
	font-size:20px;
}

#footer_mark{
	display: flex;
	justify-content: center;
	padding: 20px;
}

#prod_title {
	font-size : 1.3em;
	margin-left : 180px;
	
}

/* table */
#hosttable {
	margin-left : 170px;
	width : 80%;
	border-collapse: separate;
    border-spacing: 1px;
    text-align: center;
    line-height: 1.5;
}

.dtitle {
    padding: 10px;
    font-weight: bold;
    vertical-align: top;
    color: #fff;
    background: #ce4869 ;
}

#title {
	margin-left : 170px;
	font-family: 'Black Han Sans', sans-serif; 
	font-size : 30px;
}

.dtitle {
	text-align : center;
}

#cancelprod{
	border-radius: 10px;
 	background : white;
}

#cancelprod:hover{
	text-decoration: none;
	color: black;
	background:lightgray;
}

#mainTitle{
	font-family: 'Black Han Sans', sans-serif; 
	font-size : 35px;
}

#alreadyUse{
	border-radius: 10px;
 	background : white;
 	margin-left : 170px;
 	height : 35px;
 	margin-right : 20px;
 	margin-bottom : 15px;
}

#checkReserList{
	border-radius: 10px;
 	background : white;
 	height : 35px;
 	margin-bottom : 15px;
}

#alreadyUse:hover{
	text-decoration: none;
	color: black;
	background:lightgray;
}

#checkReserList:hover{
	text-decoration: none;
	color: black;
	background:lightgray;
}

#userList{
	width: 100%;
	margin:0;
	padding:0;
	display: flex;
	justify-content: center;
}

#subtable{
	margin-left : 10px;
	width : 80%;
	border-collapse: separate;
    border-spacing: 1px;
    text-align: center;
    line-height: 1.5;
}

#subtable2{
	margin-left : 10px;
	width : 80%;
	border-collapse: separate;
    border-spacing: 1px;
    text-align: center;
    line-height: 1.5;
}

.sub{
	padding: 10px;
    font-weight: bold;
    vertical-align: top;
    color: #fff;
    background: #ce4869 ;
}

.no {
	font-size : 20px;
}