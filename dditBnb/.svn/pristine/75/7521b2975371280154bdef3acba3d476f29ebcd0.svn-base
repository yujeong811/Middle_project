@charset "UTF-8";

a:hover{
	text-decoration: none;
}

#headerTop{
	display: flex;
	justify-content: space-between;
	align-items: center;
	margin: 30px;
}

#logoContainer a{
	display: flex;
	align-items: center;
	color: hotpink
}

#logoTitle{
	font-family: 'Fira Sans', sans-serif;
	font-size: 20px;
}

header button{
	border: none;
	border-radius: 20px;
	height: 50px;
}

.userContent{
	display: flex;
	align-items: center;
	justify-content: space-between;
	width: 200px;
}


.userMenu{
	display: flex;
	align-items: center;
}

#mainContainer{
	display: flex;
}

#searchList{
	margin: 20px;
	width: 45%;
}

.searchItem{
	display: flex;
}

.searchItem img{
	width: 300px;
	height: 200px;
	border-radius: 20px;
}

.itemInfo{
	padding: 20px;
	width: 100%;
	position: relative;
}

.itemInfo p{
	margin: 0;
}

.item_type{
	display: flex;
	justify-content: space-between;
}

.item_type > span{
	color: gray
}

.item_name{
	font-size: 20px;	
}

.addFavorite{
	cursor: pointer;
	width: 50px;
	height: 50px;
	border-radius: 50%;
	display: flex;
	justify-content: center;
	align-items: center;
	position: absolute;
	right: 10px;
	top:10px;
}

.addFavorite:hover{
	background: #f0eded;
}