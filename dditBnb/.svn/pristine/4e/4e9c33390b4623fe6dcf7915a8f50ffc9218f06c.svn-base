@charset "UTF-8";
@font-face {
  font-family: 'Material Icons';
  font-style: normal;
  font-weight: 400;
  src: url(https://example.com/MaterialIcons-Regular.eot); /* For IE6-8 */
  src: local('Material Icons'),
    local('MaterialIcons-Regular'),
    url(https://example.com/MaterialIcons-Regular.woff2) format('woff2'),
    url(https://example.com/MaterialIcons-Regular.woff) format('woff'),
    url(https://example.com/MaterialIcons-Regular.ttf) format('truetype');
}


.material-icons {
  font-family: 'Material Icons';
  font-weight: normal;
  font-style: normal;
  font-size: 24px;  /* Preferred icon size */
  display: inline-block;
  line-height: 1;
  text-transform: none;
  letter-spacing: normal;
  word-wrap: normal;
  white-space: nowrap;
  direction: ltr;

  /* Support for all WebKit browsers. */
  -webkit-font-smoothing: antialiased;
  /* Support for Safari and Chrome. */
  text-rendering: optimizeLegibility;

  /* Support for Firefox. */
  -moz-osx-font-smoothing: grayscale;

  /* Support for IE. */
  font-feature-settings: 'liga';
}


 a:hover, a:active {text-decoration: none; color:#fff;}


#container{
	background: linear-gradient(black 40%, white 60%);
	padding: 20px 150px;
}


/* header */

.headerTop{
	display: flex;
	justify-content: space-between;
	align-items: center;
}

.headerTop button{
	height: 50px;
	border: 0;
	border-radius: 50px;
}

.logoContainer a{
	display:flex;
	align-items: center;
	font-weight: bold;
	color: #fff; 
	text-decoration: none; 
	outline: none
}

#logoTitle{
	color: white;
	font-family: 'Fira Sans', sans-serif;
	font-size:20px;
}

.userContent{
	display: flex;
	align-items: center;
}
.hostingBtn{
	background: transparent;
	color: white;
	font-weight: bold;
	width: 100px;
}

.hostingBtn:hover{
	background: #575653;
	cursor: pointer;
}

.userMenu{
	display : flex;
	align-items : center;
	justify-content:center;
	cursor: pointer;
	width:80px;
	margin-left: 20px;
}

#userMenu_list{
	display : none;
	background:white;
	position: absolute;
	right: 50px;
	top:80px;
	z-index:1;
	border-radius: 10px;
	width: 200px;
	border:5px solid transparent;
	background-image: linear-gradient(#ffffff, #ffffff), linear-gradient(to right, #fbfcb9be, #ffcdf3aa, #65d3ffaa);
    background-origin: border-box;
    background-clip: content-box, border-box;
}

.userMenu_item{
	margin: 10px 0;
	padding: 10px 0;
	font-size : 15px;
	cursor: pointer;
	text-align:center;
}

.userMenu_item:hover{
	background:#d6d2d2
}

.userMenu_item a{
	color: black;
	text-decoration: none;
	outline: none
}
.headerMid{
	color:white;
	display: flex;
	justify-content: center;
	align-items: center;
	margin: 20px 0;
}

.menuList{
	display: flex;
	justify-content: center;
	align-items: center;
}

.menuList .menu{
	margin: 0 10px;
	transition:all 0.3s;
}

.menuList .menu:hover{
	cursor: pointer;
	color :#8d918e;
}

.headerBot{
	display: flex;
	justify-content: center;
}

.searchBar{
	display: flex;
	justify-content : center;
	align-items:center;
	background: white;
	border-radius: 50px;
	width: 750px;
	font-size: 12px;
	font-weight: bold;
	padding: 15px 30px;
}

.searchInput{
	margin: 0 10px;
}

.searchBar input{
	border:0;
	outline: none;
}

.searchPerson{
	display: flex;
	justify-content: space-between;
	align-items: center;
}

.searchBtn{
	border: none;
	border-radius: 50%;
	background: #FF385C;
	color: white;
	padding: 10px;
	cursor: pointer;
	transition : all 0.3s;
}

.searchBtn:hover{
	background: #E31C5F;
}


 @media only screen and (max-width:1500px){
	#container{
		padding : 20px 40px;
	}
	
}


@media only screen and (max-width:700px){
	.searchBar{
		display: none;
	}
}

/* main */

/* main- mainSection  */
#mainSection{
	width: 100%;
	height: auto;
	margin-top: 50px;
}

.mainSection_search{
	width:100%;
	display: flex;
	justify-content: center;
	align-items: center;
	position: relative;
	margin-top: 50px;
}

.mainSearch_Image{
	width: 100%;
	height: 700px;
	border-radius: 20px;
} 

.mainSearch_Btn{
	position: absolute;
	bottom: 100px;
	border: 0;
	padding: 15px 25px;
	background: white;
	font-weight: bold;
	border-radius: 50px;
	font-size: 15px;
	cursor: pointer;
	color: #c066ed;
	transition : all 0.3s;
}

.mainSearch_Btn:hover{
	transform : scale(1.1);
}

.mainSearch_Span{
	position: absolute;
	bottom: 200px;
	font-size: 40px;
	font-family: 'Black Han Sans', sans-serif;
	color: white;
	text-align: center;
}

.mainSection_ad{
	width: 100%;
	height: calc(300px - 5px);
	background: #FF385C;
	border-radius: 20px;
	color: white;
	display: flex;
	justify-content: center;
	align-items: center;
}

.mainAd_Con{
	width: 100%;
}

.mainAd_title{
	font-size: 40px;	
	font-family: 'Black Han Sans', sans-serif;
	text-align: center;
	margin: 0 20px;
	padding: 20px 0;
}

.mainAd_btn{
	margin: 20px 0;
	display: flex;
	justify-content: center;
}

.mainAd_btn button{
	border: 1px solid white;
	background: transparent;
	padding: 10px 20px;
	color: white;
	border-radius: 10px;
	cursor: pointer;
	transition : all 0.3s;
}

.mainAd_btn button:hover{
	transform : scale(1.1);
}


/* main - subSection */
#subSection{
	margin-top: 50px;
	
}

.closeSearch{
	width: 100%;
	height: 500px;
}

.closeSearch_title{
	font-family: 'Black Han Sans', sans-serif;
	font-size: 30px;
	margin-bottom: 20px;
}

.closeSearch_con{
	width : 100%;
	display: flex;
	justify-content: space-between;
	align-items: center;
}

.closeSearch_box{
	width: 20%;
	height: auto;
 	transition : all 0.3s; 
}

.closeSearch_box:hover{
 	transform : scale(1.1);	 
}

.searchBox_top{
	background-size: cover;
	width: 100%;
	height: 150px;
	border-top-right-radius: 10px;
	border-top-left-radius: 10px;
}

.searchBox_bot{
	width: 100%;
	height: 150px;
	color : white;
	font-size : 30px;
	font-weight: bold;
 	border-bottom-left-radius: 10px;
	border-bottom-right-radius: 10px;
}

.searchBox_bot span{
	padding-left: 10px;
}


#seoul .searchBox_top{
	background-image: url("https://a0.muscache.com/im/pictures/19d4c139-3615-4440-b5e3-55ee3f87e240.jpg?im_w=320");
}

#seoul .searchBox_bot{
	background: #BC1A6E;
}

#incheon .searchBox_top{
	background-image: url("https://a0.muscache.com/im/pictures/55250d06-92f1-4d22-be89-9f20f2bcb1fc.jpg?im_w=240");
}

#incheon .searchBox_bot{
	background: #D93B30;
}

#daegu .searchBox_top{
	background-image: url("	https://a0.muscache.com/im/pictures/1e5fc501-e1ed-4de4-be9f-811e9de0a0d2.jpg?im_w=240");
}

#daegu .searchBox_bot{
	background: #DE3151; 
}

#daejeon .searchBox_top{
	background-image: url("https://a0.muscache.com/im/pictures/ffde0c4b-1889-4d11-bb00-41411d34fdfc.jpg?im_w=240");
}

#daejeon .searchBox_bot{
	background: #CC2D4A;
}

/* footer */
#footer{
	background: #e3e2de;
}

#footer_list{
	display: flex;
	justify-content: center;
	padding: 30px;
}

#footer_list li{
	padding: 10px 0;
	cursor: pointer;
}

#footer_list ul{
	margin: 10px 20px;
}

#footer_list h3{
	font-weight: bold;
	margin: 0 20px;
}

#footer_mark{
	display: flex;
	justify-content: center;
	padding: 20px;
}

/* SignUp Modal */
.form-group input{
	width: 300px;
	display:inline-block;
}

.form-group input[type=radio]{
	width: 50px;
}

.form-group label{
	display:inline-block;
	width:130px;
}

#findPwd{
	margin-left:130px;
}