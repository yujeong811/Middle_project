	//컨트롤러 만들어 놓음....
	@Override
	public int insertPayment(Map<String, String> paramap) {
		int cnt = 0;
		String reser_id = paramap.get("reser_id");
		try {
			cnt = dao.insertPayment(smc, paramap);
			dao.updateReserv(smc, reser_id);
		} catch (SQLException e) {
			e.printStackTrace();
		}
		return cnt;
	}
	
