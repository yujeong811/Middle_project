}

.title{
	font-weight: bold;
}

.desCon{
	margin-bottom: 10px;
}

#prodImg img{
	width: 200px;
	height: 200px;
	border-radius: 20px;
}

.reserReq{
	width: 100%;
	height: 300px;
}

/* footer */
footer{
	background: #e3e2de;
}

#footer_list{
	display: flex;
	justify-content: center;
	padding: 30px;
}

#footer_list li{
	padding: 10px 0;
	cursor: pointer;
}

#footer_list ul{
	margin: 10px 20px;
}

#footer_list h3{
	font-weight: bold;
	margin: 0 20px;
}