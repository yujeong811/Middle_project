@charset "UTF-8";
a:hover{
	text-decoration: none;
}

p{
	margin-bottom: 0;
}

/* header */
header{
	display: flex;
	justify-content: center;
	align-items: center;
}
#headerTop{
	display: flex;
	justify-content: space-between;
	align-items: center;
	margin: 30px;
	width: 60%;
}

#logoContainer a{
	display: flex;
	align-items: center;
	color: hotpink
}

#logoTitle{
	font-family: 'Fira Sans', sans-serif;
	font-size: 20px;
}

header button{
	border: none;
	border-radius: 50px;
	height: 50px;
	background: transparent;
	font-size: 13px;
	font-weight: bold;
}

.userContent{
	display: flex;
	align-items: center;
}
.hostingBtn{
	background: transparent;
	color: white;
	font-weight: bold;
	width: 100px;
}
.hostingBtn a{
	color: black;
	
}

.hostingBtn:hover{
	background: #f0f1f2;
	cursor: pointer;
}

.userMenu{
	display : flex;
	align-items : center;
	justify-content:center;
	cursor: pointer;
	width:80px;
	margin-left: 20px;
	border: 1px solid black;
}

#userMenu_list{
	display : none;
	background:white;
	position: absolute;
	right: 250px;
	top:100px;
	z-index:100;
	border-radius: 10px;
	width: 200px;
	border:5px solid transparent;
	background-image: linear-gradient(#ffffff, #ffffff), linear-gradient(to right, #fbfcb9be, #ffcdf3aa, #65d3ffaa);
    background-origin: border-box;
    background-clip: content-box, border-box;
}

.userMenu_item{
	margin: 10px 0;
	padding: 10px 0;
	font-size : 15px;
	cursor: pointer;
	text-align:center;
}

.userMenu_item:hover{
	background:#f0f1f2;
}

.userMenu_item a{
	color: black;
	text-decoration: none;
	outline: none
}

/* main */
main{
	display: flex;
	justify-content: center;
	padding: 30px 0;
}



#reserContainer{
	width: 80%;
	justify-content: center;
}

#reser_user_Info{
	display: flex;
	width: 100%;
	margin-top:20px;
}

#reserInfoCon{
	box-shadow: rgb(237 159 224 / 50%) 0px 6px 16px;
	padding: 20px;
	border-radius: 20px;
	width: 40%;
}

#userInfoCon{
	box-shadow: rgb(237 159 224 / 50%) 0px 6px 16px;
	padding: 20px;
	border-radius: 20px;
	margin-left: 100px;
	width: 60%;
}


#payInfo{
	margin-top: 30px;
	width: 100%;
}

#payBtn{
	width: 100%;
	background:#FF385C;
	border:none;
	border-radius: 10px;
	color: white;
	padding: 10px 20px;
	margin-top: 20px;
	font-size: 20px;
}

.totalPriceCon{
	font-weight: bold;
	font-size: 30px;
}

.totalPriceCon span{
	float:right;
}

.calTotal{
	display: flex;
	justify-content: space-between;
}

#reserInfo{
	width: 100%;
	border:1px solid rgb(221, 221, 221);
	margin-top: 30px;
	border-radius: 20px;
}

#reserInfo input{
	border: none;
	outline: none;
}

input:disabled{
	background: white;
}

#reserInfo td{
	width:100%;
	border:1px solid rgb(221, 221, 221);
	padding: 10px 20px;
	position: relative;
}

#reserInfo td p{
	font-size: 12px;
	margin-bottom: 0;
}

#inputPerson{
	position: absolute;
	background: white;
	top: 70px;
	right:10px;
	padding: 25px;
	border-radius: 20px;
	width: 300px;
	display: none;
	box-shadow: rgb(0 0 0 / 12%) 0px 6px 16px;
}

#inputPerson p {
	margin: 0;
}

.inputPerson_list{
	display: flex;
	justify-content: space-between;
	align-items:center;
	padding: 10px;
}

.personCount{
	width: 100px;
	display: flex;
	justify-content: space-between;
	align-items: center;
}

.personInput_Btn{
	background: transparent;
	border: 1px solid #383b39;
	color: #383b39;
	width: 35px;
	height: 35px;
	border-radius: 50%;
	font-weight: bold;
	display: flex;
	justify-content: center;
	align-items: center;
}

button[disabled]{
	color: #dcdedc;
	border: 1px solid #dcdedc;
}

#prodInfo{
	width: 100%;
	display: flex;
	margin-top: 20px;
	justify-content: center;
}

#prodDes{
	width: 100%;
	margin-left: 20px;
}

#prodStar{
	display: flex;
	align-items: center;
}

